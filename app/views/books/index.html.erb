<body>

     <h1>Books</h1>

  <table>

   <thead>

    <tr>

     <th>Title</th>
     <th>Body</th>

    </tr>

   </thead>


   <tbody>

    <% @books.each do |book| %>

     <tr>

      <td>
       <%= book.title%>
  　   </td>
      <td>
       <%= book.body%>
      </td>

      <td><%= link_to "Show" , "/books/#{book.id}", class: "link"%></td>
      <td><%= link_to "Edit", edit_book_path(book.id), class: "link"%></td>
      <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure？", class: "link"%></td>

    </tr>

    <% end %>



  </tbody>

 </table>






     <h2>New book</h2>

　　　<% if @book.errors.any? %>
  <div class = "alert">
   error
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

     <%= form_with model: @book, url:'/books', local:true do |f| %>


      <div class= "field">

       <label for="book_title">Title</label>

         <%= f.text_field :title %>

      </div>


      <div class= "field">

       <label for="book_body">Body</label>

         <%= f.text_area :body %>

      </div>


      <div class= "action">

         <%= f.submit 'Create Book' %>

      </div>


     <% end %>



</body>